<resources>

    <style name="Theme.Messages.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Messages" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/theme_colour</item>
        <item name="android:colorPrimaryDark">@color/theme_colour_dark</item>
        <item name="android:colorAccent">@color/theme_alt_color_2</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Messages</item>
        <item name="android:actionModeStyle">@style/ActionMode.Solid.Messages</item>
    </style>

    <style name="ActionBar.Solid.Messages" parent="@android:style/Widget.Material.ActionBar.Solid">
        <item name="android:progressBarStyle">@style/ProgressBar.Messages</item>
        <item name="android:titleTextStyle">@style/ActionBarText</item>
        <item name="android:colorControlHighlight">@color/theme_alt_color_2</item>
    </style>

    <style name="ActionMode.Solid.Messages" parent="@android:style/Widget.Material.ActionMode">
        <item name="android:titleTextStyle">@style/ActionModeText</item>
    </style>

    <style name="ActionBarText" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ActionModeText" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>