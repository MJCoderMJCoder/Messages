<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="@drawable/selectable_background_messages">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <view
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            class="com.amlcurran.messages.ui.image.CircularImageView"
            android:layout_marginRight="2dp"
            android:id="@+id/image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@android:id/text1"
            android:gravity="center_vertical"
            style="@style/Material.Title.Light"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/image" />

        <TextView
            android:id="@android:id/text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            style="@style/Material.Body1.Light"
            android:layout_toRightOf="@android:id/text1"
            android:layout_alignBaseline="@android:id/text1"
            android:layout_marginLeft="4dp" />

        </RelativeLayout>

</LinearLayout>