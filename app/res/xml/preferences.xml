        <CheckBoxPreference
            android:key="notifications"
            android:title="@string/pref_title_notifications"
            android:summary="@string/pref_sum_notification"
            android:defaultValue="true" />

        <!--<CheckBoxPreference-->
            <!--android:key="persistent_notification"-->
            <!--android:title="@string/pref_title_persistent"-->
