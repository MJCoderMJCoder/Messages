<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="send_stats"
        android:title="@string/pref_title_stats"
        android:summary="@string/pref_sum_stats"
        android:defaultValue="true" />

